{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "DOM"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}